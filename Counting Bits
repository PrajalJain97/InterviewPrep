class Solution {
public:
    vector<int> countBits(int n) {
      vector<int> dp(n+1,0);
      if(!n)
         return dp;
      else if(n==1)
      {
         dp[1]++;
         return dp; 
      }
      else
      {
        dp[1]=1;
        for(int i=2;i<=n;i++)
        {
          if(i&1)
            dp[i]=dp[i-1]+1;
          else
            dp[i]=dp[i>>1] ; 
        }    
      }
      return dp;  
        
    }
};
